{
  "title": "tomatohammado mods",
  "rules": [
    {
      "description": "Control to Escape on single press, Control on press and hold.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control"
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Hook-Thumb Remedy: Spacebar + Right Shift â†’ Right Command",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ]
        }
      ]
    },
    {
      "description": "Colemak Vimish Navigation: Enable via Left Shift + Space",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "colemak_vimish_nav",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "colemak_vimish_nav",
                "value": 0
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Colemak Vimish Navigation: h/j/k/l, Page Up/Down, Home/End",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "optional": [
                "shift"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "colemak_vimish_nav",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "j"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "optional": [
                "shift"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "colemak_vimish_nav",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "k"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "optional": [
                "shift"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "colemak_vimish_nav",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "l"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "optional": [
                "shift"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "colemak_vimish_nav",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "h"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "colemak_vimish_nav",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "u"
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "colemak_vimish_nav",
              "value": 1

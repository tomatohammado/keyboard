{
  "title": "tomatohammado mods",
  "rules": [
    {
      "description": "Control to Escape on single press, Control on press and hold.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "Change spacebar to right_command. (Post spacebar if pressed alone)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "right_command"
            }
          ]
        }
      ]
    }
  ]
}